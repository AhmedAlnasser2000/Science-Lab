{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://physicslab.dev/schemas/diagnostic_event.schema.json",
  "title": "Diagnostic Event",
  "description": "Friendly error and status reporting for PhysicsLab content.",
  "type": "object",
  "properties": {
    "schema_version": {
      "$ref": "common.schema.json#/$defs/version"
    },
    "event_id": {
      "$ref": "common.schema.json#/$defs/identifier"
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warning",
        "error"
      ]
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500
    },
    "hint": {
      "type": "string",
      "maxLength": 500
    },
    "scope": {
      "type": "object",
      "description": "Optional reference to the content scope that raised the event.",
      "properties": {
        "module_id": {
          "$ref": "common.schema.json#/$defs/identifier"
        },
        "section_id": {
          "$ref": "common.schema.json#/$defs/identifier"
        },
        "package_id": {
          "$ref": "common.schema.json#/$defs/identifier"
        },
        "part_id": {
          "$ref": "common.schema.json#/$defs/identifier"
        }
      },
      "additionalProperties": false
    },
    "details": {
      "$ref": "common.schema.json#/$defs/details"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "x_extensions": {
      "$ref": "common.schema.json#/$defs/x_extensions"
    }
  },
  "required": [
    "schema_version",
    "event_id",
    "severity",
    "message"
  ],
  "additionalProperties": false
}
