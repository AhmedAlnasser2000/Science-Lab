{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://physicslab.dev/schemas/package_manifest.schema.json",
  "title": "Package Manifest",
  "description": "Collects ordered parts inside a package.",
  "type": "object",
  "properties": {
    "$schema": {
      "$ref": "common.schema.json#/$defs/schema_ref"
    },
    "schema_version": {
      "$ref": "common.schema.json#/$defs/version"
    },
    "content_version": {
      "$ref": "common.schema.json#/$defs/version"
    },
    "module_id": {
      "$ref": "common.schema.json#/$defs/identifier"
    },
    "section_id": {
      "$ref": "common.schema.json#/$defs/identifier"
    },
    "package_id": {
      "$ref": "common.schema.json#/$defs/identifier"
    },
    "title": {
      "$ref": "common.schema.json#/$defs/title"
    },
    "summary": {
      "$ref": "common.schema.json#/$defs/summary"
    },
    "parts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "part_id": {
            "$ref": "common.schema.json#/$defs/identifier"
          },
          "part_type": {
            "type": "string",
            "enum": [
              "text",
              "simulation"
            ]
          },
          "manifest_path": {
            "type": "string",
            "description": "Relative path to the part manifest from this package manifest.",
            "pattern": "^[^\\s]+$"
          },
          "order": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": [
          "part_id",
          "part_type",
          "manifest_path"
        ],
        "additionalProperties": false
      }
    },
    "x_extensions": {
      "$ref": "common.schema.json#/$defs/x_extensions"
    }
  },
  "required": [
    "schema_version",
    "content_version",
    "module_id",
    "section_id",
    "package_id",
    "title",
    "parts"
  ],
  "additionalProperties": false
}
