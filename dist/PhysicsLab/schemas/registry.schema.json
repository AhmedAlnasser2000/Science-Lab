{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://physicslab.dev/schemas/registry.schema.json",
  "title": "PhysicsLab Runtime Registry",
  "description": "Best-effort validation for data/roaming/registry.json, allowing either an array or an object with entries.",
  "oneOf": [
    {
      "$ref": "#/$defs/registryArray"
    },
    {
      "type": "object",
      "properties": {
        "entries": {
          "$ref": "#/$defs/registryArray"
        }
      },
      "additionalProperties": true
    }
  ],
  "$defs": {
    "registryArray": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/entry"
      }
    },
    "entry": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["module", "ui_pack", "lab"]
        },
        "source": {
          "type": "string",
          "enum": ["repo", "store", "app"]
        },
        "state": {
          "type": "string",
          "enum": ["present", "missing"]
        },
        "version": {
          "type": ["string", "null"]
        },
        "install_path": {
          "type": "string"
        },
        "disk_usage_bytes": {
          "type": "integer",
          "minimum": 0
        },
        "last_seen": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  }
}
