{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://physicslab.dev/schemas/module_manifest.schema.json",
  "title": "Subject Module Manifest",
  "description": "Top-level record for a subject module. V1 only supports a single Primary Mode.",
  "type": "object",
  "properties": {
    "schema_version": {
      "$ref": "common.schema.json#/$defs/version"
    },
    "content_version": {
      "$ref": "common.schema.json#/$defs/version"
    },
    "module_id": {
      "$ref": "common.schema.json#/$defs/identifier"
    },
    "subject": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "title": {
      "$ref": "common.schema.json#/$defs/title"
    },
    "summary": {
      "$ref": "common.schema.json#/$defs/summary"
    },
    "primary_mode_ref": {
      "type": "string",
      "description": "Relative path to the Primary Mode profile JSON.",
      "pattern": "^[^\\s]+$"
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "section_id": {
            "$ref": "common.schema.json#/$defs/identifier"
          },
          "title": {
            "$ref": "common.schema.json#/$defs/title"
          },
          "manifest_path": {
            "type": "string",
            "description": "Relative path to the section manifest from this module manifest.",
            "pattern": "^[^\\s]+$"
          },
          "order": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": [
          "section_id",
          "title",
          "manifest_path"
        ],
        "additionalProperties": false
      }
    },
    "x_extensions": {
      "$ref": "common.schema.json#/$defs/x_extensions"
    }
  },
  "required": [
    "schema_version",
    "content_version",
    "module_id",
    "subject",
    "title",
    "primary_mode_ref",
    "sections"
  ],
  "additionalProperties": false
}
